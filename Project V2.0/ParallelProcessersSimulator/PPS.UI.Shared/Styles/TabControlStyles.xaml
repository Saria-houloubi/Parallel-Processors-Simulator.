<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:metro="http://metro.mahapps.com/winfx/xaml/controls"
                    xmlns:local="clr-namespace:PPS.UI.Shared.Styles">

    <Style TargetType="{x:Type metro:MetroTabItem}">
        <Setter Property="Margin" Value="{StaticResource Default_Margin}"/>
    </Style>


    <Style TargetType="{x:Type metro:MetroTabControl}">
        <Setter Property="Margin" Value="{StaticResource Default_Margin}"/>
        <Setter Property="metro:TabControlHelper.Underlined" Value="TabItems"/>
        <Setter Property="metro:TabControlHelper.UnderlineBrush" Value="{StaticResource DarkBlueBrush}"/>
    </Style>

</ResourceDictionary>