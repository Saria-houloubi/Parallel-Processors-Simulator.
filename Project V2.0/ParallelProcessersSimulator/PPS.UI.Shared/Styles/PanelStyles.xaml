<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:PPS.UI.Shared.Styles">

    <Style TargetType="{x:Type StackPanel}" x:Key="BasicVertical">
        <Setter Property="Margin" Value="{StaticResource Default_Margin}"/>
        <Setter Property="Orientation" Value="Vertical"/>
    </Style>

    <Style TargetType="{x:Type StackPanel}" x:Key="ButtonHorizantal">
        <Setter Property="Margin" Value="{StaticResource Default_Margin}"/>
        <Setter Property="Orientation" Value="Horizontal"/>
        <Setter Property="HorizontalAlignment" Value="Right"/>
        <Setter Property="VerticalAlignment" Value="Top"/>
    </Style>

</ResourceDictionary>